@model WebModel
@{

    ViewData["Title"] = "Login";


}

@inject LanguageService language


    <head>
        <title>Login User</title>
        <link href="/css/EstiloGeneral.css" rel="stylesheet" />
        <script src="https://kit.fontawesome.com/4b71027628.js" crossorigin="anonymous"></script>

    </head>


<body>






    <form class="formulario" asp-controller="Usuario" asp-action="ValidarLogin" method="post">
    <h1>@language.Getkey("Iniciar Sesion")</h1>
        <div class="contenedor">
            @if (Model.tipoLogin == 1)
            {
                <div class="input-contenedor">
                    <em class="fas fa-user icon"></em>
                    <input type="text" class="form-control" name="usr" placeholder=@language.Getkey("Correo") required autofocus>
                </div>
            }
            else
            {
                <div class="input-contenedor">
                    <em class="fas fa-user icon"></em>
                    <input type="text" class="form-control" name="phone" placeholder=@language.Getkey("Celular") required autofocus>
                </div>
            }
            <div class="input-contenedor">
                <em class="fas fa-key icon"></em>
                <input type="password" class="form-control" name="pwd" placeholder=@language.Getkey("Contraseña") required>
            </div>
            <button class="button" type="submit">
                @language.Getkey("Iniciar Sesion")
            </button>
            <p>@language.Getkey("Deseo ser cliente") <a class="link" asp-controller="Usuario" asp-action="Registro" >@language.Getkey("Registro")</a></p>
        </div>
    </form>
</body>


