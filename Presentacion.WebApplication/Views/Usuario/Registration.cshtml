@model WebModel
@{
    ViewData["Title"] = "Registro";

}

@inject LanguageService language


<head>
    <title>Register user</title>
    <link href="/css/EstiloGeneral.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/4b71027628.js" crossorigin="anonymous"></script>

</head>


<body>

    <form class="formulario" asp-controller="Usuario" asp-action="Crear" method="post">
        <h1>@language.Getkey("Registro")</h1>

        <div class="contenedor">

            <div class="input-contenedor">
                <em class="fas fa-user icon"></em>
                <input type="text" class="form-control" name="nombre" placeholder=@language.Getkey("Nombre") required autofocus>
            </div>

            <div class="input-contenedor">
                <em class="fas fa-user icon"></em>
                <input type="text" class="form-control" name="apellido" placeholder=@language.Getkey("Apellido") required autofocus>
            </div>

            <div class="input-contenedor">
                <em class="fas fa-map-marker-alt"></em>
                <input type="text" class="form-control" name="dirección" placeholder=@language.Getkey("Direccion") required autofocus>
            </div>

            <div class="input-contenedor">
                <em class="fas fa-map-marked"></em>
                <input type="text" class="form-control" name="referencia" placeholder=@language.Getkey("Referencia") required autofocus>
            </div>

            <div class="input-contenedor">
                <em class="fas fa-phone"></em>
                <input type="text" class="form-control" name="celular" placeholder=@language.Getkey("Celular") required autofocus>
            </div>

            <div class="input-contenedor">
                <em class="fas fa-envelope-open"></em>
                <input type="text" class="form-control" name="correo" placeholder=@language.Getkey("Correo") required autofocus>
            </div>

            <div class="input-contenedor">
                <em class="fas fa-key icon"></em>
                <input type="password" class="form-control" name="contraseña" placeholder=@language.Getkey("Contraseña") required>
            </div>

            <button class="button" type="submit">
                @language.Getkey("Registrarme")
            </button>



        </div>

    </form>

</body>