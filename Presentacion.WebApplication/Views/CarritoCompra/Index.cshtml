                            </tr>
                            <tr>
                                <td>24</td>
                                <td>Papas Lays</td>
                                <td>1</td>
                                <td>22.50</td>
                                <td>22.50</td>
                                <td><button type="button" class="btn btn-danger">Remover</button></td>
                            </tr>

                        </tbody>
                    </table>
                </div>

            </div>
        </section>
        <!-- Pie -->
        <footer>
            <div class="container">
                <div class="col-xs-5 col-md-5">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Total a pagar</th>

                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>S/. ###</td>
                            </tr>
                        </tbody>
                    </table>
                    
                </div>
               
            </div>
        </footer>

        <footer>
            <div class="container" id="altaItems">
                <div class="col-xs-8 col-md-8">
                    <table class="table table-striped">

                        <tbody>
                        </tbody>
                    </table>
                </div>
                

                <div>
                    <form class="d-flex">
                        <a class="btn btn-outline-success" asp-controller="home" asp-action="Index">Seguir Comprando</a>
                    </form>
                </div>
                <div>
                    <form class="d-flex">
                        <a class="btn btn-outline-success" asp-controller="CarritoCompra" asp-action="CrearPDF">Confirmar Compra</a>
                    </form>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>











